<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewDoctorsName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Doctors Name"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewDoctorsQualification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Doctors Qualification"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewDoctorsAvailability"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Doctors Availability"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>