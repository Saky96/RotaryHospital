<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutSplash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.jain.rotaryhospital.SplashActivity">

    <TextView
        android:id="@+id/textViewSplashROR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Rotary Online registration"
        android:textColor="#1b1b68"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageViewSplashLogo"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/textViewSplashProgress"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textColor="#1b1b68" />

    <ProgressBar
        android:id="@+id/progressBarSplash"
        style="@android:style/Widget.DeviceDefault.ProgressBar.Horizontal"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />


</LinearLayout>
